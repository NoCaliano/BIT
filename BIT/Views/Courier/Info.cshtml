@model Courier
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Courier Information</title>
    <style>
        .thecontainer {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
        }

        p {
            font-size: 1.2rem;
            margin-bottom: 10px;
        }

        canvas {
            max-width: 100%;
            height: auto;
            margin-top: 20px;
        }
    </style>
</head>


    <div class="thecontainer">
        <h1>Courier Information</h1>
        <p><strong>Ім'я:</strong> @Model.Name</p>
        <p><strong>Прізвище:</strong> @Model.LastName</p>
        <p><strong>Вид транспорту:</strong> @Model.VehicleType</p>
        <p><strong>Ваша зарплатня:</strong> @Model.Salary</p>
        <p><strong>Остання виплата:</strong> @Model.LastSalary</p>
        <p><strong>Всього виконано доставок:</strong> @Model.Delievered</p>

        <canvas id="MyChart1"></canvas>
    </div>

    


<script type="text/javascript">
    $(document).ready(function () {
        // Завантаження даних для першого графіка
        $.ajax({
            type: "POST",
            url: "/ChartData/CourierDeliveriesChart",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                var _chartLabels = data[0];
                var _chartData = data[1];

                if (_chartLabels.length === 0 || _chartData.length === 0) {
                    console.error("No data received for the chart.");
                    return;
                }

                var barColor = ["red", "green", "gold", "blue"];

                new Chart("MyChart1", {
                    type: "line",
                    data: {
                        labels: _chartLabels,
                        datasets: [{
                            label: 'Кількість доставок',
                            backgroundColor: barColor,
                            borderColor: 'rgba(75, 192, 192, 1)',
                            borderWidth: 2,
                            pointRadius: 5,
                            pointBackgroundColor: 'rgba(75, 192, 192, 1)',
                            pointBorderColor: 'rgba(75, 192, 192, 1)',
                            data: _chartData
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            },
            error: function (xhr, status, error) {
                console.error("Error fetching chart data:", error);
            }
        });
    });
</script>