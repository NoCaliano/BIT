<!-- Перший графік -->
<canvas id="MyChart1" style="max-width: 400px; max-height: 200px;"></canvas>

<!-- Другий графік -->
<canvas id="MyChart2" width="400" height="200"></canvas>

<!-- Скрипти для завантаження та відображення графіків -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        // Завантаження даних для першого графіка
        $.ajax({
            type: "POST",
            url: "/ChartData/MostSellChart",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                var _chartLabels = data[0];
                var _chartData = data[1];

                var barColor = ["red", "green", "gold", "blue"];

                new Chart("MyChart1", {
                    type: "pie",
                    data: {
                        labels: _chartLabels,
                        datasets: [{
                            backgroundColor: barColor,
                            data: _chartData
                        }]
                    }
                });
            },
            error: OnError
        });

        // Завантаження даних для другого графіка
        $.ajax({
            type: "POST",
            url: "/ChartData/PriceChart",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                var _chartLabels = data[0];
                var _chartData = data[1];

                var barColor = ["blue", "green", "red"];

                new Chart("MyChart2", {
                    type: "bar",
                    data: {
                        labels: _chartLabels,
                        datasets: [{
                            backgroundColor: barColor,
                            data: _chartData
                        }]
                    }
                });
            },
            error: OnError
        });

        function OnError(err) {
            console.error(err);
        }
    });
</script>
