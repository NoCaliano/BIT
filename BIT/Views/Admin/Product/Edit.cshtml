@model Dish
@using BIT.DataStuff
@using BIT.Interfaces
@inject IAllCategories Categories
@{
    Layout = "_LayoutAdmin";
}

<div class="partial-container">
    <form asp-action="Edit" asp-controller="Admin" method="post" class="dish-form">
        <input asp-for="Id" type="hidden">
        <div class="form-group">
            <label asp-for="Name">Назва:</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price">Ціна:</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Опис:</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Img">URL Зображення:</label>
            <input asp-for="Img" class="form-control" />
            <span asp-validation-for="Img" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IsFavorite">Улюблений:</label>
            <input asp-for="IsFavorite" type="checkbox" class="form-check-input" />
            <span asp-validation-for="IsFavorite" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IsAvaileble">Доступний:</label>
            <input asp-for="IsAvaileble" type="checkbox" class="form-check-input" />
            <span asp-validation-for="IsAvaileble" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Calories">Калорії:</label>
            <input asp-for="Calories" class="form-control" />
            <span asp-validation-for="Calories" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Category">Калорії:</label>
            <select asp-for="Category">
                @foreach (var category in Categories.Categories)
                {
                    <option value="@category.Name">@category.Name</option>
                }
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary">Додати</button>
    </form>
</div>



<!-- Підключення jquery.validate.min.js після jQuery -->
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>