@model List<Order>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
    }

    .table {
        border-collapse: collapse;
        width: 100%;
        margin-top: 20px;
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.8);
    }

        .table th,
        .table td {
            border: 1px solid #dee2e6;
            text-align: left;
            padding: 12px;
        }

    .details {
        display: none;
        background-color: #f1f1f1;
    }

    .toggle-details {
        cursor: pointer;
        color: #007bff;
        font-weight: bold;
    }

        .toggle-details:hover {
            text-decoration: underline;
        }

    .btn-cancel {
        background-color: #dc3545;
        color: #fff;
        border: 1px solid #dc3545;
    }

        .btn-cancel:hover {
            background-color: #c82333;
            border: 1px solid #c82333;
        }

    .text-center {
        text-align: center;
        margin-top: 20px;
    }

    h1.display-4 {
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    p {
        font-size: 1rem;
        color: #6c757d;
    }

    .table {
        border-collapse: collapse;
        width: 100%;
        margin-top: 20px;
    }

        .table th,
        .table td {
            border: 1px solid #dee2e6;
            text-align: left;
            padding: 12px;
        }

    .details {
        display: none;
        background-color: #f1f1f1;
    }

    .toggle-details {
        cursor: pointer;
        color: #007bff;
        font-weight: bold;
    }

        .toggle-details:hover {
            text-decoration: underline;
        }

    .btn-cancel {
        background-color: #dc3545;
        color: #fff;
        border: 1px solid #dc3545;
    }

        .btn-cancel:hover {
            background-color: #c82333;
            border: 1px solid #c82333;
        }
</style>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="text-center">
    <h1 class="display-4">Останні замовлення</h1>
    <p>Дізнайтеся більше про <a href="https://docs.microsoft.com/aspnet/core">створення веб-додатків з ASP.NET Core</a>.</p>
</div>

<<div class="container">
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Продукт</th>
                        <th scope="col">Кількість</th>
                        <th scope="col">Адреса</th>
                        <th scope="col">Дата замовлення</th>
                        <th scope="col">Сума до сплати</th>
                        <th scope="col">Коментар</th>
                        <th scope="col">Метод оплати</th>
                        <th scope="col">Кур'єр</th>
                        <th scope="col">Статус</th>
                        <th scope="col">Скасувати</th>
                        <!-- Додайте інші заголовки за необхідності -->
                    </tr>
                    <!-- Заголовки стовпчиків -->
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>                      
                            <td>@order.ProductName</td>
                            <td>@order.Quanity</td>
                            <td>@order.ShippingAddress</td>
                            <td>@order.OrderDate</td>
                            <td>@order.TotalAmount</td>
                            <td>@order.Notes</td>
                            <td>@order.PaymentMethod</td>
                            <td>@order.Courier</td>
                            <td>@order.Status</td>
                            @if (order.Status == OrderStatus.New || order.Status == OrderStatus.Processing)
                            {
                                <td>
                                    <form asp-action="CancelOrder" asp-controller="Account" method="post">
                                        <input type="hidden" name="ordId" value="@order.Id" />
                                        <button type="submit" class="btn btn-success">Скасувати</button>
                                    </form>
                                </td>
                            }
                        </tr>
                        <tr class="details collapse" id="details-@order.Id">
                            <td colspan="10">
                                <!-- Відомості про замовлення, які можна розгорнути -->
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $('.toggle-details').click(function () {
            var target = $($(this).data('target'));
            if (target.hasClass('show')) {
                $(this).html('&#x25BC;');
            } else {
                $(this).html('&#x25B2;');
            }
        });
    });
</script>
