@model BIT.Models.Dish

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
    }

    .dish-details {
        max-width: 800px;
        margin: 0 auto;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-top: 50px;
    }

        .dish-details h2 {
            color: #343a40;
        }

    .dish-image {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin-top: 20px;
    }

    .description {
        color: #555;
    }

    .price {
        font-size: 18px;
        font-weight: bold;
        color: #28a745;
        margin-top: 10px;
    }

    .calories {
        font-size: 16px;
        color: #6c757d;
        margin-top: 5px;
    }

    .actions {
        margin-top: 20px;
    }

    .order-btn, .btn-success {
        background-color: #28a745;
        color: #fff;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .order-btn:hover, .btn-success:hover {
            background-color: #218838;
        }
</style>
<link rel="stylesheet" href="~/css/Partial.css" asp-append-version="true" />
<button id="showCartBtn" class="btn btn-info mt-4">🛒</button>
<div class="dish-details">
    <h2>@Model.Name</h2>
    <img src="@Model.Img" alt="@Model.Name" class="dish-image" />
    <p class="description">@Model.Description</p>
    <p class="price">Ціна: @Model.Price</p>
    <p class="calories">Калоріність: @Model.Calories / 100g</p>

    <div class="actions">
        <form asp-controller="Order" asp-action="PartTest" class="order-form">
            <input type="hidden" name="dishId" value="@Model.Id" />
            <button type="button" class="btn btn-success order-btn">Замовити</button>
        </form>


        <form asp-controller="ShopCart" asp-action="AddToListOfCartItems">
            <input type="hidden" name="dishId" value="@Model.Id" />
            <button type="submit" class="btn btn-success">Додати в корзину</button>
        </form>
    </div>
</div>



<div id="cartContainer">
    <!-- Вміст часткового представлення корзини буде тут -->
</div>




<div id="partial-load"></div>



<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/3.1.12/signalr.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        var partialLoadContainer = $('#partial-load');

        // Додано обробник кліку для кнопки "Замовити"
        $(".order-btn").click(function () {
            var form = $(this).closest('form');
            var dishId = form.find('input[name="dishId"]').val();

            // Вивести часткове представлення замовлення на сторінку
            $.ajax({
                url: form.attr('action'),
                type: 'GET',
                data: { dishId: dishId },
                success: function (partialView) {
                    partialLoadContainer.html(partialView).fadeIn();
                }
            });
        });

        // Додано обробник кліку для закриття часткового представлення
        $(document).on('click', '#partial-load', function (e) {
            if ($(e.target).is('#partial-load')) {
                partialLoadContainer.fadeOut();
            }
        });
    });
</script>



<script>
    $(document).ready(function () {
        var cartContainer = $('#cartContainer');

        $('form').submit(function (e) {
            e.preventDefault();
            $.ajax({
                url: $(this).attr('action'),
                type: $(this).attr('method'),
                data: $(this).serialize(),
                success: function (partialView) {
                    cartContainer.html(partialView);
                }
            });
        });

        // Обробник події для кнопки "Моя корзина"
        $("#showCartBtn").click(function () {
            cartContainer.toggle(); // Перемикає відображення/приховування
            if (cartContainer.is(':visible')) {
                // Якщо відображено, вивести часткове представлення
                $.ajax({
                    url: '/ShopCart/PartCart', // Замініть 'ControllerName' на ваш реальний контролер
                    type: 'GET',
                    success: function (partialView) {
                        cartContainer.html(partialView);
                    }
                });
            }
        });
    });
</script>

<script>
    $('#partial-load').on('submit', 'form', function (e) {
        e.preventDefault(); // Запобігає стандартному поданню форми
        var form = $(this);

        $.ajax({
            url: form.attr('action'),
            type: form.attr('method'),
            data: form.serialize(),
            success: function (data) {
                // Якщо сервер повертає HTML з помилками валідації, оновіть контейнер форми
                if ($(data).find('.field-validation-error').length > 0) {
                    $('#partial-load').html(data);
                } else {
                    window.location.href = '/Order/Thanks';
                }
            },
            error: function () {
                console.error('Failed to submit form');
            }
        });
    });
</script>


<script>
    var connection = new signalR.HubConnectionBuilder().withUrl("/cartHub").build();

    connection.on("CartUpdated", function () {
        onCartUpdated();
    });

    connection.start().then(function () {
        console.log("Connected to CartHub");
    }).catch(function (err) {
        console.error("Error connecting to CartHub: " + err.toString());
    });

    function onCartUpdated() {
        console.log('CartUpdated handler called');
        $.ajax({
            url: '/ShopCart/PartCart',
            type: 'GET',
            success: function (data) {
                $('#cartContainer').html(data);
            },
            error: function () {
                console.error('Failed to load PartCart');
            }
        });
    }
</script>
