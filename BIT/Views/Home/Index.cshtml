}



.order-button:hover {
    background-color: #555;
}
/* Оновлення в розділі header */
.user-menu {
    display: flex;
    align-items: center;
}

.cart-icon,
.profile-icon {
    margin-right: 20px;
    cursor: pointer;
    position: relative;
}

.cart-count {
    position: absolute;
    top: -10px;
    right: -10px;
    background-color: #4CAF50;
    color: white;
    border-radius: 50%;
    padding: 5px;
}

/* Додати це, щоб стилізувати іконки */
.cart-icon i,
.profile-icon i {
    font-size: 24px;
}


.hero-section {
    position: relative;
    text-align: center;
    padding: 4em;
    background-color: #f8f8f8;
    overflow: hidden;
}

.hero-image {
    width: 100%; /* Змінено на 100% для респонсивності */
    max-height: 400px; /* Додано максимальну ширину для контролю розміру */
    height: auto;
    border-radius: 10px;
    box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.2);
    margin: 0 auto; /* Центрує зображення */
}

.hero-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #333;
    max-width: 600px;
    margin: 0 auto;
}

.hero-content h1 {
    font-size: 2.5em;
    margin-bottom: 10px;
}

.hero-content p {
    font-size: 1.2em;
    margin-bottom: 20px;
    color: #555;
}

.hero-button {
    background-color: #4CAF50;
    color: white;
    padding: 15px 30px;
    font-size: 18px;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease-in-out;
    border-radius: 5px;
}

.hero-button:hover {
    background-color: #45a049;
}


.discounts-section,
.menu-section,
