@using BIT.DataStuff
@using BIT.Interfaces
@inject IAllCategories Categories

@{
    ViewData["Title"] = "Choose";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            color: #495057;
            text-align: center;
            margin: 0;
            padding: 0;
        }

        h2 {
            margin-top: 50px;
            font-size: 36px;
            font-weight: 600;
            color: #343a40;
        }

        .category-images {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            margin-top: 30px;
        }

            .category-images a {
                margin: 15px;
                text-decoration: none;
                color: #495057;
                transition: transform 0.3s ease-in-out;
                display: inline-block;
            }

            .category-images img {
                max-width: 300px;
                height: auto;
                border-radius: 8px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                transition: transform 0.3s ease-in-out;
            }

            .category-images a:hover {
                transform: scale(1.05);
            }
    </style>
</head>
<body>

    <h2>Choose a Category</h2>

    <div class="category-images">
        @foreach(var category in Categories.Categories){
        <a href="@Url.Action(category.Name, "Category")">
                <img src="~/img/@($"{category.Name}.jpg")" alt="@category.Name">
        </a>
        }
    </div>

</body>
</html>

