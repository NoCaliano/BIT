@model BIT.Models.Cart

<style>
    /* Стилі для контейнера товару */
    .cart-item {
        border: 1px solid #ddd;
        padding: 10px;
        margin-bottom: 10px;
        display: inline-block;
        text-align: center;
    }

    /* Стилі для зображення товару */
    .dish-image {
        max-width: 100px; /* Максимальна ширина зображення */
        max-height: 100px; /* Максимальна висота зображення */
        margin-bottom: 5px;
    }

    /* Стилі для заголовка товару */
    .dish-name {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 5px;
    }

    /* Стилі для інших даних товару */
    .dish-details {
        font-size: 14px;
        margin-bottom: 5px;
    }

    /* Стилі для загальної суми замовлення */
    .grand-total {
        font-size: 20px;
        font-weight: bold;
        margin-top: 20px;
    }

    /* Стилі для кнопок +/- */
    .quantity-buttons {
        display: flex;
        justify-content: space-between;
        margin-top: 10px;
    }

</style>

@if (Model != null && Model.CartItems.Count() > 0)
{
    <div>
        @foreach (var cartItem in Model.CartItems)
        {
            <div class="cart-item">
                <img class="dish-image" src="@cartItem.Dish.Img" alt="неповезло" />
                <h2 class="dish-name">@cartItem.Dish.Name</h2>
                <p class="dish-details">Ціна: @cartItem.Dish.Price</p>
                <p class="dish-details">Кількість: @cartItem.Quantity</p>
                <p class="dish-details">Загальна сума за товар: @(cartItem.Quantity * cartItem.Dish.Price)</p>

                <div class="quantity-buttons">
                    <form asp-action="DecreaseQuantity" asp-route-dishId="@cartItem.Dish.Id" method="post">
                        <button type="submit">➖</button>
                    </form>
                    <form asp-action="CleanSubject" asp-route-dishId="@cartItem.Dish.Id" method="post">
                        <button type="submit">❌</button>
                    </form>
                    <form asp-action="IncreaseQuantity" asp-route-dishId="@cartItem.Dish.Id" method="post">
                        <button type="submit">➕</button>
                    </form>
                </div>
            </div>
        }
        <form method="post" action="@Url.Action("Checkout", "ShopCart")">
            <button id="checkout-button" type="submit">Перейти до оформлення</button>
        </form>
    </div>

    <p class="grand-total">Загальна сума замовлення: @Model.GrandTotal</p>

}
else
{
    <p>Вашик кошик порожній, крінж повний</p>
}


<script>
    $(document).ready(function () {
        $('.quantity-buttons form').submit(function (e) {
            e.preventDefault();

            var form = $(this);
            var url = form.attr('action');
            var method = form.attr('method');
            var data = form.serialize();

            $.ajax({
                url: url,
                type: method,
                data: data,
                success: function (partialView) {
                    $('#cartContainer').html(partialView);
                }
            });
        });
    });

    $(document).ready(function () {
        $('.quantity-buttons form').submit(function (e) {
            e.preventDefault();

            var form = $(this);
            var url = form.attr('action');
            var method = form.attr('method');
            var data = form.serialize();

            $.ajax({
                url: url,
                type: method,
                data: data,
                success: function (partialView) {
                    $('#cart-container').html(partialView); // Змінено id на 'cart-container'
                },
                error: function () {
                    console.error('Failed to update cart');
                }
            });
        });
    });
</script>