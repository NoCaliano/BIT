<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - wow</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/wow.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">wow</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="background-color: green">
                    <partial name="_LoginPartial.cshtml" />
                    @if (User.Identity.IsAuthenticated)
                    {
                        <h2 class="fuck"><a href="@Url.Action("Index","Home")">Головна</a></h2>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <h2 class ="fuck"><a href="@Url.Action("Chose","Category")">Категорії</a></h2>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <h2 class="fuck"><a href="@Url.Action("Dashboard", "Admin")">Адмінка</a></h2>
                    }
                    @if (User.IsInRole("Courier") || (User.IsInRole("Admin")))
                    {
                        <h2 class="fuck"><a href="@Url.Action("Index", "Courier")">Кур'єрство</a></h2>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <h2 class="fuck"><a href="@Url.Action("MyOrders", "Account")">Мої замовлення</a></h2>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - wow - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
