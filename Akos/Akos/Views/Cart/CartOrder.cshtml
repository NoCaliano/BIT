@model Akos.Models.Cart

<div class="container">
    <h2>Shopping Cart</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Cart" asp-action="SubmitCart" asp-route-CartId="@Model.Id" class="btn btn-primary">Замовити</a>
</div>
